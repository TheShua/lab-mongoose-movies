<h2>Edit {{#if savedMovie}}{{savedMovie.title}}{{else}}{{movie.title}}{{/if}}</h2>
<section class="list">
  <form action="/movies/{{movie._id}}" method="POST">
    <div class="element">
      <label for="title">Title*</label><input type="text" name="title" id="title" value="{{movie.title}}" {{#if errors.emptyTitle}}class="error" {{/if}}>
    </div>
    <div class="element">
      <label for="genre">Genre</label><input type="text" name="genre" id="genre" value="{{movie.genre}}">
    </div>
    <div class="element">
      <label for="plot">Plot</label><textarea name="plot" id="plot">{{movie.plot}}</textarea>
    </div>
    {{#if errors.message}}<p class="error">{{errors.message}}</p>{{/if}}
    <button>Edit</button>
  </form>
</section>