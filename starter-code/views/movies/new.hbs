<h2>Add a new movie</h2>
<form action="/movies" method="POST">
  <div class="element">
    <label for="title">Title *</label><input type="text" name="title" id="title" value="{{base.title}}" {{#if errors.emptyTitle}}class="error" {{/if}}>
  </div>
  <div class="element">
    <label for="genre">Genre</label><input type="text" name="genre" id="genre" value="{{base.genre}}">
  </div>
  <div class="element">
    <label for="plot">Plot</label><input type="text" name="plot" id="plot" value="{{base.plot}}">
  </div>
  <p>{{errors.message}}</p>
  <button>Create</button>
</form>